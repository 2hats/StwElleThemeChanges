{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_body_classes %}{% if config('StwElleThemeChanges.config.enable') %}{{ parent() }} elle-custom-theme-active{% else %}{{ parent() }}{% endif %}{% endblock %}

{% block base_head %}
	{{ parent() }}
	{% if config('StwElleThemeChanges.config.enable') %}
    <script async src="https://cdn.eye-able.com/configs/www.stadtwerke-hersbruck.de.js"></script>
	<script async src="https://cdn.eye-able.com/public/js/eyeAble.js"></script>
	{% endif %}
{% endblock %}

{% block base_body_inner %}
	{% set customBreadscrub = page.header.navigation.active.customFields.breadscrub %}
	{% if customBreadscrub %}
		{% set customBreadscrubValue = customBreadscrub %}
	{% endif %}


	{% if config('StwElleThemeChanges.config.enable') %}

		<div class="elle-custom-theme-plugin{% if customBreadscrubValue == 'breadcrumb_white' %} breadcrumb-white{% endif %}">
			{{ parent() }}
		</div>
		{% block base_navigation %}
			{% if config('StwElleThemeChanges.config.enable') %}
				{% else %}
					{{ parent() }}
			{% endif %}

		{% endblock %}
	{% else %}
		{{ parent() }}
	{% endif %}

{% endblock %}


{% block base_header_inner %}

	{% if config('StwElleThemeChanges.config.enable') %}
		<div data-flyout-menu="true">
			{% sw_include '@Storefront/storefront/layout/header/elle-header.html.twig' %}
			{% sw_include '@Storefront/storefront/layout/navigation/flyouts.html.twig' %}
		</div>
	{% else %}
		{{ parent() }}
	{% endif %}
{% endblock %}

{% block base_footer_inner %}
	{% if config('StwElleThemeChanges.config.enable') %}
		{% sw_include '@Storefront/storefront/layout/footer/elle-footer.html.twig' %}
	{% else %}
		{{ parent() }}
	{% endif %}
{% endblock %}


{% block base_scroll_up %}
	{% if config('StwElleThemeChanges.config.enable') %}
		<div class="elle-custom-theme-plugin">
			{{ parent() }}
		</div>
	{% else %}
		{{ parent() }}
	{% endif %}
{% endblock %}

{% block base_cookie_permission %}
	{% if config('StwElleThemeChanges.config.enable') %}
		<div class="elle-custom-theme-plugin">
			{{ parent() }}
		</div>
	{% else %}
		{{ parent() }}
	{% endif %}
{% endblock %}

    {% block base_pseudo_modal %}
        {% if config('StwElleThemeChanges.config.enable') %}
		<div class="elle-custom-theme-plugin">
			{{ parent() }}
		</div>
	{% else %}
		{{ parent() }}
	{% endif %}
    {% endblock %}

    {% block base_speculation_rules %}
        {% if config('StwElleThemeChanges.config.enable') %}
		<div class="elle-custom-theme-plugin">
			{{ parent() }}
		</div>
	{% else %}
		{{ parent() }}
	{% endif %}
    {% endblock %}
