						<li class="footer-bottom-links-item"> <a class="footer-bottom-links-item-link" href="mailto:info@stadtwerke-hersbruck.de" target="_blank">info@stadtwerke-hersbruck.de</a></li><span class="footer-bottom-links-divider">|</span> #}
							{# {% for serviceMenuItem in page.header.serviceMenu %}
								{% block layout_footer_service_menu_item %}
									<li class="ooter-bottom-links-item">
										<a class="ffooter-bottom-links-item-link" href="{{ category_url(serviceMenuItem) }}" {% if category_linknewtab(serviceMenuItem) %} target="_blank" {% endif %} title="{{ serviceMenuItem.translated.name }}">
											{{ serviceMenuItem.translated.name }}
										</a>
									</li><span class="footer-bottom-links-divider">|</span>
								{% endblock %}
							{% endfor %} #}
						{# </ul> #}
						{% endapply %}
					{% endblock %}
				</div>
			{% endblock %}

			{% block layout_footer_vat %}
				<div class="footer-vat d-none">
					{% if context.taxState == "gross" %}
						<p>
							{{ "footer.includeVat"|trans({
                                '%url%': path('frontend.cms.page',{ id: config('core.basicInformation.shippingPaymentInfoPage') })
                            })|raw }}
						</p>
					{% else %}
						<p>
							{{ "footer.excludeVat"|trans({
                                '%url%': path('frontend.cms.page',{ id: config('core.basicInformation.shippingPaymentInfoPage') })
                            })|raw }}
						</p>
					{% endif %}
				</div>
			{% endblock %}

			{% block layout_footer_copyright %}
				<div class="footer-copyright d-none">
					{% sw_icon 'shopware' style {'size':'xs'} %}
					{{ "footer.copyrightInfo"|trans|sw_sanitize }}
				</div>
			{% endblock %}
		</div>
	{% endblock %}
{% endblock %}
